{
  "name": "origami-webhooks",
  "version": "1.0.0",
  "description": "A serverless service for incoming and outgoing webhooks for Origami housekeeping",
  "main": "env.js",
  "scripts": {
    "deploy": "serverless deploy",
    "logs": "serverless logs -f webhooks -t",
    "lint": "eslint .",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "nyc --reporter=lcov --reporter=text-lcov mocha test/unit/**/*.test.js --recursive",
    "test-integration": "sls offline start --exec \"mocha test/integration/**/*.test.js --recursive\"",
    "start": "sls offline start"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@financial-times/origami-repo-data-client": "^1.5.0",
    "aws-sdk": "^2.313.0",
    "dotenv-safe": "^6.0.0",
    "eslint": "^5.16.0",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "execa": "^1.0.0",
    "fetch-mock": "^7.0.0-alpha.6",
    "mocha": "^5.2.0",
    "mockery": "^2.1.0",
    "nyc": "^13.0.1",
    "process": "^0.11.10",
    "proclaim": "^3.5.1",
    "serverless": "^1.43.0",
    "serverless-offline": "^3.25.11",
    "serverless-secrets-plugin": "^0.1.0",
    "serverless-stack-output": "^0.2.3",
    "sinon": "^6.2.0",
    "supertest": "^3.3.0"
  }
}
